@import "../movie/movie-template.wxss";

.movie-list-container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.movie-list-head {
  padding: 30rpx 25rpx 22rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.slogan {
  font-size: 24rpx;
}

.more-text {
  vertical-align: middle;
  margin-right: 10rpx;
  color: #1f4ba5;
}

.more-img {
  width: 9rpx;
  height: 16rpx;
  vertical-align: middle;
}

.movies-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
}