@import "post-item/post-item-template.wxss";

swiper {
  width: 100%;
  height: 450rpx;
}

/*less sass*/

swiper image {
  width: 100%;
  height: 450rpx;
}

.greatReview {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  font-size: 12px;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px;
  height: 50rpx;
}

.reviewFont {
  font-size: 16px;
  font-weight: 600;
}

.catchInput {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.catchInput input {
  width: 200rpx;
  height: 25rpx;
  border: 1px solid #ccc;
  border-radius: 35rpx/30rpx;
  padding: 0 12px;
  margin-right: 5px;
}

.searchFont {
  font-size: 14px;
}
